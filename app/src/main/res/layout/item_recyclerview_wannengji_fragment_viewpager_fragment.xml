<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_Corner_Radius"
    card_view:cardElevation="4dp"
    card_view:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:padding="2dp"
            android:text="2016-06-01"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:padding="2dp"

            android:text="试验设备：" />

        <TextView
            android:id="@+id/tv_equipment_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview1"
            android:layout_toRightOf="@+id/textview1"
            android:padding="2dp"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:padding="2dp"
            android:text="工程名称：" />

        <TextView
            android:id="@+id/tv_project_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview2"
            android:layout_toRightOf="@+id/textview2"
            android:padding="2dp"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview2"
            android:padding="2dp"
            android:text="试件编号：" />

        <TextView
            android:id="@+id/tv_identifier_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview3"
            android:layout_toRightOf="@+id/textview3"
            android:padding="2dp"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview3"
            android:padding="2dp"
            android:text="施工部位：" />

        <TextView
            android:id="@+id/tv_position_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview4"
            android:layout_toRightOf="@+id/textview4"
            android:padding="2dp"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview4"
            android:padding="2dp"
            android:text="品        种：" />

        <TextView
            android:id="@+id/tv_kind_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview5"
            android:layout_toRightOf="@+id/textview5"
            android:padding="2dp"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview5"
            android:padding="2dp"
            android:text="试验类型：" />

        <TextView
            android:id="@+id/tv_testtype_item_recyclerview_yaliji_fragment_viewpager_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview6"
            android:layout_toRightOf="@+id/textview6"
            android:padding="2dp"
            android:text="万能机1" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_qualified_item_recyclerview_yaliji_fragment_viewpager_fragment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top|right"
        android:src="@drawable/ic_add_grey_700_24dp" />
</android.support.v7.widget.CardView>