<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_recyclerview_wannengji_fragment_viewpager_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_Corner_Radius"
    card_view:cardElevation="4dp"
    card_view:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_title_item_recyclerview_wannengji_fragment_viewpager_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0.5dp"
            android:text="2016-06-01"
            android:textColor="@color/black_87_percent_alpha"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview1"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_item_recyclerview_wannengji_fragment_viewpager_fragment"
            android:text="试验设备：" />

        <TextView
            android:id="@+id/tv_equipment_item_recyclerview_wannengji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview1"
            android:layout_toRightOf="@+id/textview1"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview2"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:text="工程名称：" />

        <TextView
            android:id="@+id/tv_project_name_item_recyclerview_wannengji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview2"
            android:layout_toRightOf="@+id/textview2"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview3"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview2"
            android:text="试件编号：" />

        <TextView
            android:id="@+id/tv_identifier_item_recyclerview_wannengji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview3"
            android:layout_toRightOf="@+id/textview3"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview4"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview3"
            android:text="施工部位：" />

        <TextView
            android:id="@+id/tv_position_item_recyclerview_wannengji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview4"
            android:layout_toRightOf="@+id/textview4"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview5"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview4"
            android:text="品        种：" />

        <TextView
            android:id="@+id/tv_kind_item_recyclerview_wannengji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview5"
            android:layout_toRightOf="@+id/textview5"
            android:text="万能机1" />

        <TextView
            android:id="@+id/textview6"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview5"
            android:text="试验类型：" />

        <TextView
            android:id="@+id/tv_testtype_item_recyclerview_wannengji_fragment_viewpager_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textview6"
            android:layout_toRightOf="@+id/textview6"
            android:text="万能机1" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_qualified_item_recyclerview_wannengji_fragment_viewpager_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:src="@drawable/ic_qualified_tag_top_right" />
</android.support.v7.widget.CardView>