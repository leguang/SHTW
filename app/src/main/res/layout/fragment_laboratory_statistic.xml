<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_laboratory_statistic_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:fitsSystemWindows="true"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextAppearance="@style/ToolbarTextAppearance" />
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            card_view:cardElevation="3dp"
            card_view:contentPaddingBottom="1dp"
            card_view:contentPaddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_date_laboratory_statistic_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2016-03-01" />

                <TextView
                    android:id="@+id/end_date_laboratory_statistic_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2016-06-01" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:text="查询" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <in.srain.cube.views.ptr.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ptr_laboratory_statistic_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightest_gray"
            cube_ptr:ptr_duration_to_close="200"
            cube_ptr:ptr_duration_to_close_header="1000"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_resistance="1.7">

            <com.shtoone.shtw.ui.PageStateLayout
                android:id="@+id/psl_laboratory_statistic_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:emptyView="@layout/page_state_empty_view"
                app:errorView="@layout/page_state_error_view"
                app:loadingView="@layout/page_state_loading_view"
                app:netErrorView="@layout/page_state_net_error_view">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nsv_laboratory_statistic_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            card_view:cardCornerRadius="@dimen/card_Corner_Radius">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textview1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="统计图" />

                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/barchart_laboratory_statistic_fragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="160dp"
                            card_view:cardCornerRadius="@dimen/card_Corner_Radius">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="统计数" />

                                <!-- 表头部分：试验类型、试验次数、不合格数、处置数、处置率 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingTop="5dp">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_weight="0.4"
                                            android:gravity="left"
                                            android:text="实验类型"
                                            android:textColor="@color/blue"
                                            android:textSize="16dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.18"
                                            android:gravity="center_horizontal"
                                            android:text="实验数量"
                                            android:textColor="@color/blue"
                                            android:textSize="16dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.18"
                                            android:gravity="center_horizontal"
                                            android:text="合格"
                                            android:textColor="@color/blue"
                                            android:textSize="16dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.18"
                                            android:gravity="center_horizontal"
                                            android:text="有效"
                                            android:textColor="@color/blue"
                                            android:textSize="16dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.18"
                                            android:gravity="center_horizontal"
                                            android:text="不合格数"
                                            android:textColor="@color/blue"
                                            android:textSize="16dp" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.18"
                                            android:gravity="center_horizontal"
                                            android:text="处置数"
                                            android:textColor="@color/blue"
                                            android:textSize="16dp"
                                            android:visibility="gone" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.16"
                                            android:gravity="center_horizontal"
                                            android:text="合格率"
                                            android:textColor="@color/blue"
                                            android:textSize="16dp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- 分割线 -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/black" />

                                <!-- 混泥土强度 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">

                                    <TextView
                                        android:id="@+id/sys1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="0.4"
                                        android:gravity="left"
                                        android:text="混凝土强度"
                                        android:textColor="@color/blue"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item1_1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item1_2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item1_2_1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item1_2_2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item1_3"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/sysdh_item1_4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.16"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <!-- 钢筋试验 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">

                                    <TextView
                                        android:id="@+id/sys2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="0.4"
                                        android:gravity="left"
                                        android:text="钢筋试验"
                                        android:textColor="@color/blue"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item2_1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item2_2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item2_2_1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item2_2_2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item2_3"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/sysdh_item2_4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.16"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <!-- 钢筋焊接接头 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">

                                    <TextView
                                        android:id="@+id/sys3"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="0.4"
                                        android:gravity="left"
                                        android:text="焊接接头"
                                        android:textColor="@color/blue"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item3_1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item3_2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item3_2_1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item3_2_2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item3_3"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/sysdh_item3_4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.16"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <!-- 钢筋机械连接接头 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp">

                                    <TextView
                                        android:id="@+id/sys4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="0.4"
                                        android:gravity="left"
                                        android:text="钢筋接头"
                                        android:textColor="@color/blue"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item4_1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item4_2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item4_2_1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item4_2_2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/orange"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sysdh_item4_3"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.18"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/sysdh_item4_4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.16"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </com.shtoone.shtw.ui.PageStateLayout>
        </in.srain.cube.views.ptr.PtrFrameLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>


